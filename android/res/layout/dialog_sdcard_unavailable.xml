<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="@dimen/margin_base_plus">

    <TextView
      android:id="@+id/tv__title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/margin_base"
      android:text="@string/sd_unavailable_title"
      android:textAppearance="@style/MwmTextAppearance.Title"
      android:textStyle="bold"/>

    <TextView
      android:id="@+id/tv__message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/sd_unavailable_message_first"
      android:textAppearance="@style/MwmTextAppearance.Body3"/>

    <TextView
      android:id="@+id/tv__message_second"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/margin_base"
      android:text="@string/sd_unavailable_message_second"
      android:textAppearance="@style/MwmTextAppearance.Body3"/>

    <Button
      android:id="@+id/btn__use_internal_storage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginTop="@dimen/margin_base"
      android:background="?selectableItemBackgroundBorderless"
      android:gravity="end|center_vertical"
      android:paddingLeft="@dimen/margin_half"
      android:paddingRight="@dimen/margin_half"
      android:text="@string/sd_unavailable_use_internal"
      android:textAllCaps="true"
      android:textAppearance="@style/MwmTextAppearance.Body1"
      android:textColor="@color/base_blue"/>

    <Button
      android:id="@+id/btn__try_again"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginTop="@dimen/margin_base"
      android:background="?selectableItemBackgroundBorderless"
      android:gravity="end|center_vertical"
      android:paddingLeft="@dimen/margin_half"
      android:paddingRight="@dimen/margin_half"
      android:text="@string/sd_unavailable_try_again"
      android:textAllCaps="true"
      android:textAppearance="@style/MwmTextAppearance.Body1"
      android:textColor="@color/base_blue"/>

    <Button
      android:id="@+id/btn__cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginTop="@dimen/margin_base"
      android:background="?selectableItemBackgroundBorderless"
      android:gravity="end|center_vertical"
      android:paddingLeft="@dimen/margin_half"
      android:paddingRight="@dimen/margin_half"
      android:text="@string/sd_unavailable_cancel"
      android:textAllCaps="true"
      android:textAppearance="@style/MwmTextAppearance.Body1"
      android:textColor="@color/base_blue"/>

  </LinearLayout>

</ScrollView>
